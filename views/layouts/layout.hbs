<style type="text/css">
body{
    padding: 0;
    margin:0;
    width:100%;
}
    #loader{
        width: 100%;
        height: 100vh;
        background-color: white;
        position: fixed;
        z-index: 1;

    }
    #loader .loader {
        font-family: "Courier New";
        font-weight: bold;
        font-size: 120%;
        width: 140px;
        height: 140px;
        padding-left: 25px;
        padding-top:50px ;
        border-radius: 50%;
        border-top: 7px solid #2e6da4;
border-right: 7px solid #4cae4c;
        border-left: 7px solid gold;
        border-bottom: 7px solid deeppink;
        margin-top: 200px;
        margin-left: 600px;
        animation: rot 0.5s infinite;
    }
    @keyframes rot {
        0%{
            transform: rotate(360deg);
        }
        50%{
            transform: rotate(0deg);
        }

    }
    @media and screen (max-width:768px){
        #loader{
            display: none;
        }
    }
</style>
<script type="text/javascript">
    var preload = document.getElementById('loader');
    function load(){
        preload.style.display='none'
    }
</script>
